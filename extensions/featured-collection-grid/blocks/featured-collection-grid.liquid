{% comment %}
  Featured Collection Grid â€” Shows random products from a collection.
  Merchants add this block to any section that supports app blocks.
{% endcomment %}

<div class="fcg-container" {{ block.shopify_attributes }}>
  {% if block.settings.collection != blank %}
    {% assign products_to_show = block.settings.products_to_show | default: 8 %}
    {% assign columns = block.settings.columns | default: 4 %}
    
    {% if block.settings.heading != blank %}
      <h2 class="fcg-heading">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="fcg-grid fcg-cols-{{ columns }}" data-fcg-shuffle>
      {% for product in block.settings.collection.products limit: products_to_show %}
        <div class="fcg-product">
          <a href="{{ product.url }}" class="fcg-product-link">
            <div class="fcg-image-wrapper">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | default: product.title }}"
                  loading="lazy"
                  width="400"
                  height="400"
                  class="fcg-image"
                >
              {% else %}
                <div class="fcg-placeholder">{{ 'product-1' | placeholder_svg_tag: 'fcg-placeholder-svg' }}</div>
              {% endif %}
            </div>
            <h3 class="fcg-product-title">{{ product.title }}</h3>
            <div class="fcg-price">{{ product.price | money }}</div>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p class="fcg-empty">Select a collection in the theme editor to display products.</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Featured Collection Grid",
  "target": "section",
  "enabled_on": {
    "templates": ["index", "collection", "page", "product"]
  },
  "stylesheet": "featured-collection-grid.css",
  "javascript": "featured-collection-grid.js",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 24,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    }
  ]
}
{% endschema %}
